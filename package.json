{
	"name": "sentinel",
	"version": "0.0.1",
	"scripts": {
		"dev": "concurrently \"npx tsc -p ./config/tsconfig.json --watch\" \"nodemon -q dist/server.js\"",
		"build": "node ./generators/build.js",
		"start": "node dist/server.js",
		"codegen": "graphql-codegen --config ./config/codegen.yml",
		"cleanup": "prettier --config ./config/.prettierrc './**/*.ts' --write"
	},
	"dependencies": {
		"@apollo/datasource-rest": "^4.3.2",
		"@apollo/server": "^4.3.0",
		"fuse.js": "^6.6.2",
		"graphql": "^16.6.0"
	},
	"devDependencies": {
		"@babel/core": "^7.20.7",
		"@graphql-codegen/cli": "2.16.1",
		"@graphql-codegen/introspection": "2.2.3",
		"@graphql-codegen/typescript": "2.8.5",
		"@graphql-codegen/typescript-resolvers": "2.7.10",
		"@types/node": "^18.11.17",
		"concurrently": "^7.6.0",
		"node-fetch": "^3.3.0",
		"nodemon": "^2.0.20",
		"prettier": "^2.8.1",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.4"
	},
	"type": "module"
}